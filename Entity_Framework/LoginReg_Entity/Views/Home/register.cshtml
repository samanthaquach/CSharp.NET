@model Form_Submission.Models.User
@{
    ViewData["Title"] = "Home Page";
}

<h1>Register</h1>
<a href="/login"><button class="btn btn-default">Already Registered?</button></a>

    <ul>
        @{
            foreach(var field in ViewBag.ModelFields)
            {
                if (field.Errors.Count > 0)
                {
                    <li>@field.Errors[0].ErrorMessage</li>
                }
            }
        }
    </ul>

	@if (ViewBag.showReg)
	{
		<ul class="notif seventy center">
			@{
				foreach (string error in ViewBag.errors)
				{
					<li>@error</li>
				}
			}
		</ul><!-- end_of_notif-->
	}
    
<form class="form-horizontal" asp-controller="Home" asp-action="register" method="post">
        <fieldset>
            <!-- ==================== First NAME NAME NAME =================================== -->
            <div class="form-group">
                <label for="inputName" class="col-md-2 control-label"  asp-for="firstname">First Name</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" name="firstname" id="inputFirstName" placeholder="First Name" asp-for="firstname">
                </div>
            </div>


            <!-- ===================== Last NAME NAME NAME ============================ -->
            <div class="form-group">
                <label for="inputName" class="col-md-2 control-label" asp-for="lastname">Last Name</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" name="lastname" id="inpuLasttName" placeholder="Last Name" asp-for="lastname">
                </div>
            </div>

            <!-- ===================== AGE AGE AGE AGE ================================= -->

            <div class="form-group">
                <label for="inputName" class="col-md-2 control-label" asp-for="age">Age</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" name="age" id="inputAge" placeholder="Age" asp-for="age">
                </div>
            </div>

            <!-- ===================== EMAIL EMAIL EMAIL =============================== -->

            <div class="form-group">
                <label for="inputName" class="col-md-2 control-label" asp-for="email">Email</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" name="email" id="inputEmail" placeholder="Email" asp-for="email">
                </div>
            </div>

            <!-- ===================== PASSWORD PASSWORD PASS =============================== -->

            <div class="form-group">
                <label for="inputName" class="col-md-2 control-label" asp-for="password">Password</label>
                <div class="col-md-10">
                    <input type="password" class="form-control" name="password" id="inputPassword" asp-for="password">
                </div>
            </div>

            <!-- ===================== CONFIRM PASSWORD PASSWORD =============================== -->

            <div class="form-group">
                <label for="inputName" class="col-md-2 control-label" asp-for="confirm">Confirm Password</label>
                <div class="col-md-10">
                    <input type="password" class="form-control" name="confirm" id="inputPassword" asp-for="confirm">
                </div>
            </div>

             <!-- ===================== SUBMIT FORM BUTTON ================================= -->
            <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" name="submit" class="btn btn-primary">Submit</button>
            </div>
            </div>

            
    </fieldset>
</form>